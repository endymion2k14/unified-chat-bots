{
  "automatedMessages": {
    "secrets.json.bot.config.name": {
      "enabled": true,
      "randomOrder": false,
      "minutesBetweenMessages": 5,
      "chatsNeededBeforeNextMessage": 10,
      "messages": [
        {
          "type": "single",
          "messages": [
            "This type only uses the first message in this list",
            "This second one will never show up"
          ]
        },
        {
          "type": "random",
          "messages": [
            "Only one of these will be displayed randomly",
            "The question is which one will happen"
          ]
        },
        {
          "type": "ordered",
          "messages": [
            "These messages will be displayed in order",
            "All of them will be displayed before it switches to any other message set",
            "The time, and message, required in between these messages is the same as normal"
          ]
        },
        {
          "type": "list",
          "messages": [
            "This is a list",
            "Unlike the ordered type,",
            "this list goes alot faster",
            "So they all will be displayed in short order",
            "With close to 5 seconds in between each of them"
          ]
        }
      ]
    }
  },
  "banHandler": {
    "secrets.json.bot.config.name": {
      "enabled": true,
      "cleanup_systems": ["gptrecap", "gptknows", "welcome"],
      "log_cleanup": true
    }
  },
  "followers": {
    "secrets.json.bot.config.name": {
      "message": "Thank you for following, {username}"
    }
  },
  "gpt": {
    "secrets.json.bot.config.name": {
      "host": "ip.of.remote.ollama.gpt.setup.otherwise.will.use.local.optional",
      "model": "name.of.model.otherwise.will.use.gemma3:4b-it-qat.optional"
    }
  },
  "gptimage": {
    "secrets.json.bot.config.name": {
      "host": "ip.of.remote.ollama.gpt.setup.otherwise.will.use.local.optional",
      "model": "name.of.model.otherwise.will.use.gemma3:4b-it-qat.optional",
      "resolution": "pick.one.for.performance.1920x1080.or.1280x720.or.800x450.or.440x248.or.320x180"
    }
  },
  "gptknows": {
    "secrets.json.bot.config.name": {
      "host": "ip.of.remote.ollama.gpt.setup.otherwise.will.use.local.optional",
      "model": "name.of.model.otherwise.will.use.gemma3:4b-it-qat.optional",
      "remembrance": 5
    }
  },
  "gptrecap": {
    "secrets.json.bot.config.name": {
      "host": "ip.of.remote.ollama.gpt.setup.otherwise.will.use.local.optional",
      "model": "name.of.model.otherwise.will.use.gemma3:4b-it-qat.optional",
      "max_messages": 5,
      "message_limit_per_user": 5,
      "message_time_window": 60000
    }
  },
  "obsIntegration": {
    "secrets.json.bot.config.name": {
      "enabled": true,
      "integrations": [
        {
          "event": "follow",
          "actions": [
            {
              "type": "setTextSource",
              "sceneName": null,
              "sourceName": "Follower-Placeholder",
              "text": "Welcome {user_name}!"
            },
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Follower-Placeholder",
              "enabled": true,
              "delay": 1,
              "duration": 7
            },
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Follower-Overlay",
              "enabled": true,
              "delay": 0,
              "duration": 9
            },
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Follower-Sound",
              "enabled": true,
              "delay": 0,
              "duration": 5
            }
          ]
        },
        {
          "event": "raid",
          "actions": [
            {
              "type": "setTextSource",
              "sceneName": null,
              "sourceName": "Raid-Placeholder",
              "text": "{user_name} raided with {viewer_count} viewers!"
            },
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Raid-Placeholder",
              "enabled": true,
              "delay": 1,
              "duration": 7
            },
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Raid-Overlay",
              "enabled": true,
              "delay": 0,
              "duration": 9
            },
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Raid-Sound",
              "enabled": true,
              "delay": 0,
              "duration": 15
            }
          ]
        },
        {
          "event": "ban",
          "actions": [
            {
              "type": "setSourceEnabled",
              "sceneName": null,
              "sourceName": "Ban-Sound",
              "enabled": true,
              "delay": 0,
              "duration": 5
            }
          ]
        },
        {
          "event": "personGreet",
          "actions": [
            {
              "type": "setSourceEnabled",
              "sourceName": "{sourceName}",
              "enabled": true,
              "delay": "{delay}",
              "duration": "{duration}"
            }
          ]
        }
      ]
    }
   },
  "personGreeter": {
    "secrets.json.bot.config.name": {
      "enabled": true,
      "users": {
        "username1": {
          "sourceName": "OBS_Source_Name_1",
          "delay": 0,
          "duration": 10
        },
        "username2": {
          "sourceName": "OBS_Source_Name_2",
          "delay": 2,
          "duration": 15
        }
      }
    }
  },
  "welcome": {
    "secrets.json.bot.config.name": {
      "first": ["message.goes.here", "Other.message"],
      "back": ["message.one", "message.two"],
      "welcomeDelay": 1
    }
  }
}
